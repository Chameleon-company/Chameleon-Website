    <!--  This closing tag marks the end of the body section. -->
    <script>
    function login_Success() {
    document.getElementById('login-message').innerText = "Login was successful";
}
    // This code adds an event listener to the LinkedIn icon link.
    document.getElementById('linkedin').addEventListener('click', function() {
        //  When the LinkedIn icon is clicked, it redirects the user to the LinkedIn login page.
        window.location.href = "https://www.linkedin.com/login";
    });
    
    //  This code adds an event listener to the Google icon link.
    document.getElementById('google').addEventListener('click', function() {
        //  When the Google icon is clicked, it redirects the user to the Google sign-in page.
        window.location.href = "https://accounts.google.com/signin";
    });
    
    //  This code adds an event listener to the Microsoft icon link.
    document.getElementById('microsoft').addEventListener('click', function() {
        //  When the Microsoft icon is clicked, it redirects the user to the Microsoft login page.
        window.location.href = "https://login.microsoftonline.com/";
    });
    </script>
    <!--  This script tag includes an external JavaScript file named "script.js" for adding interactive functionality to the webpage. -->
